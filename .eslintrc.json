{
	"env": {
		"es6": true,
		"node": true
	},
	"parser": "babel-eslint",
	"plugins": ["graphql", "react"],
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-console": "off",
		"react/react-in-jsx-scope": "off"
	}
}
